<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="#0000"
            android:textSize="20dp"
            android:text="Vi Tien"
            android:id="@+id/frbtnViTien"
            android:drawableLeft="@drawable/vitien"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0000"
            android:textSize="20dp"
            android:text="Thu Chi"
            android:id="@+id/frbtnThuChi"
            android:drawableLeft="@drawable/thuchi"/>

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/frbtnTraCuu"
            android:background="#0000"
            android:textSize="20dp"
            android:text="Tra Cuu"
            android:drawableLeft="@drawable/tracuu"/>

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/frbtnCaiDat"
            android:background="#0000"
            android:textSize="20dp"
            android:text="Cai dat"
            android:drawableLeft="@drawable/setting"/>

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="#0000"
            android:textSize="20dp"
            android:text="Giup do"
            android:id="@+id/frbtnGiupDo"
            android:drawableLeft="@drawable/help"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/frbtnThongTin"
            android:background="#0000"
            android:textSize="20dp"
            android:text="Thong Tin"
            android:drawableLeft="@drawable/thongtin"/>

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/frbtnPhanHoi"
            android:background="#0000"
            android:textSize="20dp"
            android:text="Phan hoi"
            android:drawableLeft="@drawable/phanhoi"/>
</LinearLayout>